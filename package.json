{
  "name": "site-sciences",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build --turbopack",
    "start": "next start",
    "lint": "eslint",
    "format": "prettier --write .",
    "seed": "node prisma/seed.mjs",
    "test:e2e": "PW_PREVIEW=1 playwright test",
    "test:e2e:ui": "PW_PREVIEW=1 playwright test --ui",
    "test:e2e:headed": "PW_PREVIEW=1 playwright test --headed --project=chromium",
    "tsc": "tsc --noEmit",
    "stripe:listen": "stripe listen --forward-to localhost:3000/api/stripe/webhook",
    "stripe:trigger:checkout": "stripe trigger checkout.session.completed",
    "cron:daily": "curl -fsS \"http://localhost:3000/api/cron/daily?key=$SECRET_CRON_KEY\"",
    "cron:weekly": "curl -fsS \"http://localhost:3000/api/cron/weekly?key=$SECRET_CRON_KEY\""
  },
  "dependencies": {
    "@prisma/client": "^6.16.2",
    "@stripe/stripe-js": "^7.9.0",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^3.0.2",
    "next": "15.5.3",
    "nodemailer": "^7.0.6",
    "pdfkit": "^0.17.2",
    "qrcode": "^1.5.4",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "resend": "^6.1.2",
    "sqlite3": "^5.1.7",
    "stripe": "^18.5.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@playwright/test": "^1.55.1",
    "@types/node": "^20.19.19",
    "@types/nodemailer": "^7.0.2",
    "@types/pdfkit": "^0.17.3",
    "@types/qrcode": "^1.5.5",
    "@types/react": "^19.2.0",
    "@types/react-dom": "^19.2.0",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.36.0",
    "eslint-config-next": "^15.5.3",
    "json": "^11.0.0",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "prisma": "^6.16.2",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.9.3"
  }
}
